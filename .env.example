# Application Settings
APP_NAME=Surgical Analysis Platform
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8080
RELOAD=True

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=surgical_analysis
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_POOL_SIZE=50

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=surgical-analysis-prod
GOOGLE_APPLICATION_CREDENTIALS=./credentials/service-account-key.json
VERTEX_AI_LOCATION=us-central1

# Gemini API Configuration
GEMINI_MODEL=gemini-2.5-flash
GEMINI_LIVE_MODEL=gemini-live-2.5-flash-native-audio
GEMINI_TEMPERATURE=0.1
GEMINI_MAX_OUTPUT_TOKENS=8192

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_METHODS=*
ALLOWED_HEADERS=*

# File Upload
MAX_UPLOAD_SIZE_MB=500
ALLOWED_VIDEO_FORMATS=mp4,avi,mov,mkv

# Cloud Storage
GCS_BUCKET_NAME=surgical-videos
GCS_UPLOAD_FOLDER=uploads
GCS_MASTER_PROCEDURES_FOLDER=master-procedures

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_MESSAGE_SIZE=10485760

# Monitoring & Logging
SENTRY_DSN=
ENABLE_PERFORMANCE_MONITORING=False

# Feature Flags
ENABLE_VIDEO_ANALYSIS=True
ENABLE_REAL_TIME_MONITORING=True
ENABLE_ALERTS=True
